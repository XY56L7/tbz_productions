{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "lib": ["ESNext", "DOM"],
      "jsx": "react-jsx",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "noEmit": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "types": ["@cloudflare/workers-types"]
    },
    "include": ["src/**/*.tsx", "src/**/*.js", "src/emails/**/*.tsx"]
  }